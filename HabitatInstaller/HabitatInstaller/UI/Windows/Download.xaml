<Window x:Class="HabitatInstaller.UI.Windows.DownloadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HabitatInstaller"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Step 1: Installing..." Height="300" Width="300" Background="#2e384e">
    <Grid Margin="25,100,16.6,106">
        <Label Content="Downloading..."
               Name="lblDownloading"
               Padding="0" 
               VerticalAlignment="Top"
               Foreground="LightGray" Margin="-6,-85,6,0" />
        <ProgressBar Name="pbDownloadStatus" Minimum="0" Maximum="100" Value="0" Margin="-9,-64,4,103" />

        <ProgressBar Name="pbZipStatus" Minimum="0" Maximum="100" Value="0" Margin="0,47,0,-47" Foreground="Red" Visibility="Hidden" />
    </Grid>
</Window>
