<Window x:Class="HabitatInstaller.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HabitatInstaller"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Settings" Height="300" Width="400">
    <Grid>
        <Label Content="Habitat download Url:" Name="habitatUrlLabel" Padding="0" VerticalAlignment="Top" Margin="10,10,83.6,0" />
        <TextBox Height="23"
                 HorizontalAlignment="Left"
                 Margin="10,30,0,0" Name="habitatUrl" VerticalAlignment="Top" Width="300" />
        <Label Content="Temp directory:" Name="tempDirectoryLabel" Padding="0" VerticalAlignment="Top" Margin="10,60,83.6,0" />
        <TextBox Height="23"
                 HorizontalAlignment="Left"
                 Margin="10,80,0,0" Name="tempDirectory" VerticalAlignment="Top" Width="300" />
        <Button Content="Save"
                Width="200"
                Height="40"
                Name="saveButton"
                Click="Button_Click"/>

    </Grid>
</Window>
